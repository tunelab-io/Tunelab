    <div class="sidebar-divider"></div>
    
    <div class="sidebar-section">
        <div class="section-header">
            <h3>Recent Projects</h3>
            <a href="/projects/new" class="new-project-btn" title="Create new project">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
                    <path fill-rule="evenodd" d="M7.75 2a.75.75 0 01.75.75V7h4.25a.75.75 0 110 1.5H8.5v4.25a.75.75 0 11-1.5 0V8.5H2.75a.75.75 0 010-1.5H7V2.75A.75.75 0 017.75 2z"></path>
                </svg>
            </a>
        </div>
        <ul class="sidebar-list">
            <% if (typeof recentProjects !== 'undefined' && recentProjects.length > 0) { %>
                <% recentProjects.slice(0, 5).forEach(project => { %>
                    <li>
                        <a href="/projects/<%= project._id %>" class="project-item">
                            <div class="project-icon" style="color: <%= project.private ? '#8b949e' : '#238636' %>">
                                <% if (project.private) { %>
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
                                        <path fill-rule="evenodd" d="M4 4v2h-.25A1.75 1.75 0 002 7.75v5.5c0 .966.784 1.75 1.75 1.75h8.5A1.75 1.75 0 0014 13.25v-5.5A1.75 1.75 0 0012.25 6H12V4a4 4 0 10-8 0zm6.5 2V4a2.5 2.5 0 00-5 0v2h5zM12 7.5h.25a.25.25 0 01.25.25v5.5a.25.25 0 01-.25.25h-8.5a.25.25 0 01-.25-.25v-5.5a.25.25 0 01.25-.25H12z"></path>
                                    </svg>
                                <% } else { %>
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
                                        <path fill-rule="evenodd" d="M2 2.5A2.5 2.5 0 014.5 0h8.75a.75.75 0 01.75.75v12.5a.75.75 0 01-.75.75h-2.5a.75.75 0 110-1.5h1.75v-2h-8a1 1 0 00-.714 1.7.75.75 0 01-1.072 1.05A2.495 2.495 0 012 11.5v-9zm10.5-1V9h-8c-.356 0-.694.074-1 .208V2.5a1 1 0 011-1h8zM5 12.25v3.25a.25.25 0 00.4.2l1.45-1.087a.25.25 0 01.3 0L8.6 15.7a.25.25 0 00.4-.2v-3.25a.25.25 0 00-.25-.25h-3.5a.25.25 0 00-.25.25z"></path>
                                    </svg>
                                <% } %>
                            </div>
                            <div class="project-details">
                                <div class="project-meta">
                                    <span class="project-name"><%= project.name %></span>
                                    <% if (project.private) { %>
                                        <span class="project-visibility">Private</span>
                                    <% } %>
                                </div>
                                <span class="project-updated">Updated <%= project.updatedAt ? new Intl.RelativeTimeFormat('en', { numeric: 'auto' }).format(Math.round((new Date(project.updatedAt) - new Date()) / (1000 * 60 * 60 * 24)), 'day') : 'Never' %></span>
                            </div>
                        </a>
                    </li>
                <% }); %>
            <% } else { %>
                <li class="empty-list">
                    <div class="empty-state">
                        <svg class="empty-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                            <path fill-rule="evenodd" d="M3 3a2 2 0 012-2h9.982a2 2 0 011.414.586l4.018 4.018A2 2 0 0121 7.018V21a2 2 0 01-2 2H5a2 2 0 01-2-2V3zm2-.5a.5.5 0 00-.5.5v18a.5.5 0 00.5.5h14a.5.5 0 00.5-.5V7.018a.5.5 0 00-.146-.354l-4.018-4.018a.5.5 0 00-.354-.146H5z"></path>
                        </svg>
                        <p>No recent projects</p>
                        <a href="/projects/new" class="btn-create">Create a project</a>
                    </div>
                </li>
            <% } %>
        </ul>
    </div>

    <div class="sidebar-divider"></div>
    
