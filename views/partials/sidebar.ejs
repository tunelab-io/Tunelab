<style>
    .sidebar-container {
        padding: 16px;
        height: 100%;
        overflow-y: auto;
        background: #0d1117;
        border-right: 1px solid #30363d;
    }

    .sidebar-section {
        margin-bottom: 24px;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
    }

    .sidebar-section h3 {
        font-size: 12px;
        text-transform: uppercase;
        color: #8b949e;
        font-weight: 600;
        letter-spacing: 0.5px;
        margin: 0;
    }

    .new-project-btn {
        padding: 4px;
        border-radius: 6px;
        color: #8b949e;
        transition: all 0.2s;
    }

    .new-project-btn:hover {
        color: #58a6ff;
        background: rgba(56, 139, 253, 0.1);
    }

    .sidebar-nav, .sidebar-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .sidebar-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 8px 12px;
        color: #c9d1d9;
        text-decoration: none;
        border-radius: 6px;
        transition: all 0.2s;
        font-size: 14px;
        font-weight: 500;
    }

    .sidebar-item:hover {
        background: rgba(177, 186, 196, 0.12);
        color: #f0f6fc;
    }

    .sidebar-icon {
        fill: currentColor;
        flex-shrink: 0;
    }

    .project-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 8px 12px;
        color: #c9d1d9;
        text-decoration: none;
        border-radius: 6px;
        transition: all 0.2s;
        width: 100%;
    }

    .project-item:hover {
        background: rgba(177, 186, 196, 0.12);
    }

    .project-details {
        display: flex;
        flex-direction: column;
        min-width: 0;
        flex: 1;
    }

    .project-meta {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .project-name {
        font-size: 14px;
        font-weight: 500;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        color: #c9d1d9;
    }

    .project-visibility {
        font-size: 12px;
        color: #8b949e;
        padding: 0 7px;
        border: 1px solid #30363d;
        border-radius: 2em;
        font-weight: 500;
    }

    .project-updated {
        font-size: 12px;
        color: #8b949e;
    }

    .project-icon {
        flex-shrink: 0;
    }

    .empty-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 24px 16px;
        text-align: center;
        color: #8b949e;
    }

    .empty-icon {
        margin-bottom: 12px;
        fill: currentColor;
    }

    .btn-create {
        margin-top: 12px;
        padding: 6px 12px;
        background: #238636;
        color: #ffffff;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: background-color 0.2s;
    }

    .btn-create:hover {
        background: #2ea043;
    }

    .sidebar-divider {
        height: 1px;
        background: #30363d;
        margin: 16px 0;
    }

    /* Active state */
    .sidebar-item.active {
        background: rgba(56, 139, 253, 0.1);
        color: #58a6ff;
    }

    .sidebar-item.active .sidebar-icon {
        color: #58a6ff;
    }
</style>
